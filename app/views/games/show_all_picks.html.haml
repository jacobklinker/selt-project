%body
  %div.row
    - @players.each do |player|
      %div.span3
        %h3.section_header.crop #{player[:name]}
        %table.container.table-striped.span3#games
          %thead
               
          %tbody
            - player[:games].each do |game|
              %tr
              - if game[:home_winner]
                - if game[:is_finished] &&(game[:correct_pick]==2)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold; color: green"}= game[:game].home_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: green;"}
                    - if game[:game].home_odds < 0
                      %div #{game[:game].home_odds}
                    - else
                      %div +#{game[:game].home_odds}
                - elsif game[:is_finished] &&(game[:correct_pick]==1)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold; color: yellow"}= game[:game].home_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: yellow;"}
                    - if game[:game].home_odds < 0
                      %div #{game[:game].home_odds}
                    - else
                      %div +#{game[:game].home_odds}
                - elsif game[:is_finished] &&(game[:correct_pick]==0)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: red; "}= game[:game].home_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: red;"}
                    - if game[:game].home_odds < 0
                      %div #{game[:game].home_odds}
                    - else
                      %div +#{game[:game].home_odds}
                - else
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;"}= game[:game].home_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;"}
                    - if game[:game].home_odds < 0
                      %div #{game[:game].home_odds}
                    - else
                      %div +#{game[:game].home_odds}
              - else
                - if game[:is_finished] &&(game[:correct_pick]==2)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color:green;"}= game[:game].away_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: green;"}
                    - if game[:game].away_odds < 0
                      %div #{game[:game].away_odds}
                    - else
                      %div +#{game[:game].away_odds}
                - elsif game[:is_finished] &&(game[:correct_pick]==1)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color:orange;"}= game[:game].away_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: orange;"}
                    - if game[:game].away_odds < 0
                      %div #{game[:game].away_odds}
                    - else
                      %div +#{game[:game].away_odds}
                - elsif game[:is_finished] &&(game[:correct_pick]==0)
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color:red;"}= game[:game].away_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;color: red;"}
                    - if game[:game].away_odds < 0
                      %div #{game[:game].away_odds}
                    - else
                      %div +#{game[:game].away_odds}
                - else
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;"}=game[:game].away_team
                  %td{:class => "col-1", :align => "left", :style => "font-weight: bold;"}
                    - if game[:game].away_odds < 0
                      %div #{game[:game].away_odds}
                    - else
                      %div +#{game[:game].away_odds}
        %br
        %p TIEBREAKER: #{player[:tiebreaker_pick].points_estimate}
