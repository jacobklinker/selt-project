%body
  - if user_signed_in?
    %div.jumbotron
      %h1 Welcome to Pick 'Em, #{current_user.first_name}!
    %div.row
      %div.span12
        %p.header Welcome to the Pick 'Em app.  From your home page, you can navigate to your active leagues, or create a new league of your own.  Enjoy, and best of luck with your picks!
    %div.row
      %div.span12
        %h3 Announcements
        %hr
        %table
          %tr
            %td.icon 
              = image_tag "announcement-icon.PNG"
            %td This is an announcement!
          %tr
            %td.icon 
              = image_tag "announcement-icon.PNG"
            %td This is another announcement!  
        %hr
    %div.row
      %div.span12
        %h3 My Leagues
        %table.table.table-striped
          %thead
            %tr
              %th
                %h6 League Name
              %th
                %h6 Commissioner
              %th
                %h6 Your Rank
              %th
                %h6 See League
          %tbody
            %tr
              -if current_user.league1_id != nil
                %td #{League.find(current_user.league1_id).league_name}
                %td #{User.find(League.find(current_user.league1_id).commissioner_id).email}
                %td 1/12
                %td
                  %button.btn.btn-link Visit League
            %tr
              -if current_user.league2_id != nil
                %td #{League.find(current_user.league2_id).league_name}
                %td #{User.find(League.find(current_user.league2_id).commissioner_id).email}
                %td 1/12
                %td
                  %button.btn.btn-link Visit League
            %tr
              -if current_user.league3_id != nil
                %td #{League.find(current_user.league3_id).league_name}
                %td #{User.find(League.find(current_user.league3_id).commissioner_id).email}
                %td 1/12
                %td
                  %button.btn.btn-link Visit League
            %tr
              -if current_user.league4_id != nil
                %td #{League.find(current_user.league4_id).league_name}
                %td #{User.find(League.find(current_user.league4_id).commissioner_id).email}
                %td 1/12
                %td
                  %button.btn.btn-link Visit League
            %tr
              -if current_user.league5_id != nil
                %td #{League.find(current_user.league5_id).league_name}
                %td #{User.find(League.find(current_user.league5_id).commissioner_id).email}
                %td 1/12
                %td
                  %button.btn.btn-link Visit League
    %div.row
      %div.span12
        %h3 Quick Hits
        =button_to 'Create League', {:controller => 'leagues', :action => 'new'}, {:id => 'create_league', :class => 'btn btn-primary btn-block', :method => 'get'}
